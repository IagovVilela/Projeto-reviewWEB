{
  "components": {
    "button": {
      "variants": ["primary", "secondary", "tertiary"],
      "sizes": ["sm", "md", "lg"],
      "states": ["default", "hover", "active", "disabled", "loading"],
      "specs": {
        "primary": {
          "background": "linear-gradient(135deg, #8b5cf6 0%, #ec4899 100%)",
          "color": "#ffffff",
          "padding": "12px 24px",
          "borderRadius": "8px",
          "fontWeight": "500",
          "hover": {
            "transform": "translateY(-2px)",
            "boxShadow": "0 10px 25px rgba(139, 92, 246, 0.3)"
          }
        },
        "secondary": {
          "background": "#6b7280",
          "color": "#ffffff",
          "padding": "12px 24px",
          "borderRadius": "8px",
          "fontWeight": "500"
        },
        "tertiary": {
          "background": "transparent",
          "color": "#8b5cf6",
          "padding": "12px 24px",
          "borderRadius": "8px",
          "fontWeight": "500"
        }
      }
    },
    "card": {
      "variants": ["default", "hover", "active"],
      "specs": {
        "background": "#ffffff",
        "padding": "24px",
        "borderRadius": "12px",
        "border": "1px solid #e5e7eb",
        "boxShadow": "0 1px 2px rgba(0, 0, 0, 0.05)",
        "hover": {
          "transform": "translateY(-4px)",
          "boxShadow": "0 10px 25px rgba(0, 0, 0, 0.1)"
        }
      }
    },
    "input": {
      "types": ["text", "email", "phone", "textarea"],
      "states": ["default", "focus", "error", "disabled"],
      "specs": {
        "border": "1px solid #d1d5db",
        "borderRadius": "8px",
        "padding": "12px 16px",
        "fontSize": "1rem",
        "focus": {
          "borderColor": "#8b5cf6",
          "boxShadow": "0 0 0 3px rgba(139, 92, 246, 0.1)"
        },
        "error": {
          "borderColor": "#ef4444",
          "boxShadow": "0 0 0 3px rgba(239, 68, 68, 0.1)"
        }
      }
    },
    "badge": {
      "variants": ["success", "warning", "error", "info"],
      "sizes": ["sm", "md"],
      "specs": {
        "success": {
          "background": "#10b981",
          "color": "#ffffff"
        },
        "warning": {
          "background": "#fbbf24",
          "color": "#ffffff"
        },
        "error": {
          "background": "#ef4444",
          "color": "#ffffff"
        },
        "info": {
          "background": "#3b82f6",
          "color": "#ffffff"
        }
      }
    }
  },
  "layout": {
    "sidebar": {
      "width": "256px",
      "background": "linear-gradient(180deg, #f8fafc 0%, #f1f5f9 100%)",
      "padding": "24px"
    },
    "container": {
      "maxWidth": "1280px",
      "padding": "0 24px"
    },
    "grid": {
      "columns": {
        "mobile": 1,
        "tablet": 2,
        "desktop": 3
      },
      "gap": "24px"
    }
  }
}
